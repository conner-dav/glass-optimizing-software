{
  "name": "glass-cutting-optimizer",
  "version": "1.0.0",
  "description": "Professional glass cutting optimization desktop app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.glasscutting.optimizer",
    "productName": "Glass Cutting Optimizer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "icon.ico"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "icon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "icon.ico"
    }
  },
  "keywords": ["glass", "cutting", "optimizer"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}